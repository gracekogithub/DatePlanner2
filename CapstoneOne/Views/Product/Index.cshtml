@model IEnumerable<CapstoneOne.Models.Product>

<div class="container p-3">
    <div class="row pt-4>"
         <div class="col-6>"
              <h2 class="text-primary">Product</h2>
         </div>
    <div class="col-6 text-right">
        <a asp-controller="Product" asp-action="Create" class="btn btn-primary"> Create New Item</a>
    </div>
    </div>
</div>
@if(Model.Count() >0)
            {
                <table class="table table-bordered table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                Name
                            </th>
                            <th>
                                Description
                            </th>
                            <th>
                                Price
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var product in Model)
                         {
                        <tr>
                            <td width="30%">@product.Name</td>
                            <td width="30%">@product.Description</td>
                            <td width="30%">@product.Price</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@product.ProductId">Edit</a>|
                                <a asp-action="Details" asp-route-id="@product.ProductId">Details</a>|
                                <a asp-action="Delete" asp-route-id="@product.ProductId">Delete</a>|
                                <a asp-controller=“Customer” asp-action=“AddToCart” asp-route-id=“@product.ProductId”>Add to Cart</a>

                            </td>
                        </tr>
                         }



                    </tbody>
                </table>
            }
            else 
            {
                <p>No items yet</p>
            }
                   