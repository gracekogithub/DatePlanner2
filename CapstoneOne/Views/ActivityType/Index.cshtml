@model IEnumerable<CapstoneOne.Models.DateActivityType>

<div class="container p-3">
    <div class="row pt-4>"
         <div class="col-6>"
              <h2 class="text-primary">Product</h2>
         </div>
    <div class="col-6 text-right">
        <a asp-controller="ActivityType" asp-action="Create" class="btn btn-primary"> Create New Activity Type</a>
    </div>
    </div>
</div>
@if(Model.Count() >0)
            {
                <table class="table table-bordered table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                Activity Name
                            </th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var activityType in Model)
                {
                        <tr>
                            <td width="50%">@activityType.Name</td>
                            <td width="40%">
                                <div class="w-100 btn-group" roll="group">
                                    <a asp-controller="ActivityType" asp-action="Update" asp-route-Id="@activityType.Id" class="btn btn-primary mx-1">Update</a>
                                    <a asp-controller="ActivityType" asp-action="Update" asp-route-Id="@activityType.Id" class="btn btn-danger mx-2">Delete</a>
                                </div>
                            </td>
                        </tr>
                }



                    </tbody>
                </table>
            }
            else 
            {
                <p>No other activities yet</p>
            }
                   